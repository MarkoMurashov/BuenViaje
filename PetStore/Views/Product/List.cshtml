@model ProductsListViewModel

@foreach (var product in Model.Products)
{
    <partial name="ProductSummary" model="product" />
}

<ul class="pagination" style="margin-top: 2%;">
    @for (int mypage = 1; mypage <= Model.PagingInfo.TotalPages; mypage++)
    {
        if (mypage == Model.PagingInfo.CurrentPage)
        {
            <li class="page-item active">
                <a asp-action="List" asp-route-productPage="@mypage" class="page-link">
                    @mypage
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a asp-action="List" asp-route-productPage="@mypage" class="page-link">
                    @mypage
                </a>
            </li>
        }
    }
</ul>