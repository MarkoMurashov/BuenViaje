@model BuenViaje.Models.TransportOwner
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="container-fluid w-50">
        <div class="card mt-2">
            <div class="card-body">
                <div class="mx-auto img-fluid img-circle d-block" style="margin-bottom:1%">
                    @if (!String.IsNullOrWhiteSpace(Model.ImageId))
                    {
                        <img class="mx-auto img-fluid img-circle d-block" src="@Url.Action("GetImage", new { id=@Model.ImageId })" alt="" />
                    }
                    else
                    {
                        <img src="~/images/pets.png" class="mx-auto img-fluid img-circle d-block" alt="" />
                    }
                </div>
                <h5 class="card-title">
                    Имя:<i> @Html.DisplayFor(model => model.Name)</i>
                </h5>

                <h5 class="card-title">
                    Фамилия:<i> @Html.DisplayFor(model => model.Surname)</i>
                </h5>
                <h5 class="card-title">
                    Отчество: <i> @Html.DisplayFor(model => model.Patronymic)</i>
                </h5>
                <h5 class="card-title">
                    <i>Телефон: @Html.DisplayFor(model => model.Phone)</i>
                </h5>

            </div>                     
        </div>

    </div>
        <div class="text-center" style="margin-top: 2%">
            <a asp-action="Edit" asp-controller="TransportOwner"
               class="btn btn-warning btn-transparent rounded-pill"
               asp-route-transportOwnerId="@Model.Id" id="btnAdd">
                Отредактировать
            </a>
            <a asp-action="Show" asp-controller="TransportOwner" class="btn btn-secondary btn-transparent rounded-pill" id="btnAdd">Назад</a>
        </div>
