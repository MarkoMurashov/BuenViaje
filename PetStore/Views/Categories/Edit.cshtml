@model BuenViaje.Models.Categories
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div  class="container-fluid w-50">
        <form asp-action="Edit" asp-controller="Categories" method="post">
            <div class="card mt-2">
                <div class="card-body">
                    <h2 class="card-title">
                        Добавить категорию
                    </h2>
                    <input type="hidden" asp-for="@Model.Id" />
                    <div class="form-group">
                        <h5 class="card-title">
                            Название
                        </h5>
                        <div id="danger"><span asp-validation-for="@Model.Name"></span></div>
                        <input asp-for="@Model.Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <h5 class="card-title">
                            Описание
                        </h5>
                        <div id="danger"><span asp-validation-for="@Model.Description"></span></div>
                        <textarea asp-for="@Model.Description" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="text-center" style="margin-top: 2%">
                <button class="btn btn-success btn-transparent rounded-pill" type="submit">Сохранить</button>
                <a asp-action="Show" asp-controller="Categories" class="btn btn-secondary btn-transparent rounded-pill">Отмена</a>
            </div>
        </form>
</div>